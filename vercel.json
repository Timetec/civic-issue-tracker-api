{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    }
  ],
  "outputDirectory": "static",
  "build": {
    "env": {
      "FLASK_APP": "api.index:app"
    },
    "command": "flask db upgrade"
  }
}